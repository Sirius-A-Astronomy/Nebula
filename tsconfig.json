{
    "extends": "@vue/tsconfig/tsconfig.web.json",
    "include": [
        "env.d.ts",
        "src/**/*",
        "src/**/*.vue"
    ],
    "compilerOptions": {
        "baseUrl": ".",
        "module": "esnext",
        "paths": {
            "@/*": [
                "nebula/src/js/*"
            ],
            "@scss/*": [
                "nebula/src/scss/*"
            ],
            "@views/*": [
                "nebula/src/views/*"
            ],
            "@components/*": [
                "nebula/src/components/*"
            ],
        }
    },
    "references": [
        {
            "path": "./tsconfig.config.json"
        }
    ]
}